  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "DEMO Program",
      "program": "${file}",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "preLaunchTask": "watch",
      "showAsyncStacks": true,
      "outFiles": [
        "${workspaceRoot}/lib/**/*.js"
      ]
    }
  ]
}